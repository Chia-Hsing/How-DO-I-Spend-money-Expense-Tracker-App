<main class="form-wrap container-fluid">
  <h2>Sign up</h2>
  <form action="/user/signup" method="post" class="needs-validation" novalidate>
    <div class="form-row">
      <div class="form-group row">
        <label for="form_username">Username</label>
        <input type="text" name="form_username" class="form-control" id="form_username"   placeholder="Username" value="{{user.username}}" required>
        <div class="valid-feedback">
          good!
        </div>
        <div class="invalid-feedback">
          invalid username!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_email">Email</label>
        <input type="text" name="form_email" class="form-control" id="form_email" value="{{user.email}}" placeholder="Email Address" required>
        <div class="valid-feedback">
          good!
        </div>
        <div class="invalid-feedback">
          invalid email address!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_password">Password</label>
        <input type="text" name="form_password" class="form-control" id="form_password" value="{{user.password}}" placeholder="password" required>
        <div class="valid-feedback">
          good!
        </div>
        <div class="invalid-feedback">
          Please provide a valid password!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_password_recheck">Confirm Password</label>
        <input type="text" name="form_password_recheck" class="form-control" id="form_password_recheck" value="{{user.password__recheck}}" placeholder="confirm password" required>
        <div class="valid-feedback">
          good!
        </div>
        <div class="invalid-feedback">
          password does not match.
        </div>
      </div>
    </div>
    </div>
    <div class="btn_group">
      <button class="btn_signup btn-primary btn-sm btn-rounded" type="submit">Sign up</button>
      <button class="btn_fb btn btn-primary btn-sm btn-rounded" type="submit"><span class="iconify" data-icon="fa:facebook" data-inline="false"></span></button>
    </div>
  </form>
  <div class="form_aside">
    <aside><span>Have a account? </span><a href="/user/login"><strong>Log in</strong></a></aside>
    <aside><span>Forgot password? </span><a href="/user/reset_password"><strong>Reset</strong></a></aside>
  </div>
</main>


