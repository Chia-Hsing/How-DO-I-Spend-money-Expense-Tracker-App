<main class="form-wrap container-fluid">
  <h2 class='title_signup'>Sign up</h2>
  {{> notification}}
  <form action="/user/signup" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-row">
      <div class="form-group row">
        <label for="form_username">Username</label>
        <input type="text" name="username" class="form-control" id="form_username"   placeholder="Username" value="{{user.username}}" required>
        <div class="valid-feedback">
          Good!
        </div>
        <div class="invalid-feedback">
          Invalid username!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_email">Email</label>
        <input type="email" name="email" class="form-control" id="form_email" value="{{user.email}}" placeholder="Email Address" required>
        <div class="valid-feedback">
          Good!
        </div>
        <div class="invalid-feedback">
          Invalid email address!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_password">Password</label>
        <input type="password" name="password" class="form-control" id="form_password" value="{{user.password}}" placeholder="password" pattern="^\S{8,12}$" required>
        <div class="valid-feedback">
          Good!
        </div>
        <div class="invalid-feedback">
          Please provide a valid password!
        </div>
      </div>
      <div class="form-group row">
        <label for="form_password_recheck">Confirm Password</label>
        <input type="password" name="password__recheck" class="form-control" id="form_password_recheck" value="{{user.password__recheck}}" placeholder="confirm password" required>
        <div class="valid-feedback">
          Good!
        </div>
        <div class="invalid-feedback">
          Password does not match.
        </div>
      </div>
    </div>
    </div>
    <div class="btn_group">
      <button class="btn_signup btn-primary btn-sm btn-rounded" type="submit">Sign up</button>
      <a class='btn_fb btn-primary btn-sm btn-rounded' href="/auth/facebook"><span class="iconify" data-icon="fa:facebook" data-inline="false"></span></a>
    </div>
  </form>
  <div class="form_aside">
    <aside><span>Have a account? </span><a href="/user/login"><strong>Log in</strong></a></aside>
    <aside><span>Forgot password? </span><a href="/user/resetPW"><strong>Reset</strong></a></aside>
  </div>
</main>



