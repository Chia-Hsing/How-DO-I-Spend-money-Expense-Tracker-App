        {{#if chartJS}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
        <script>
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: [
                            'food', 
                            'entertaining',
                            'clothes',
                            'knowledge',
                            'transportation',
                            'home_supplies',
                            'healthcare',
                            'housing',
                            ],
                    datasets: [{
                        label: 'monthly summary',
                        data: [{{chartData}}],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(90, 150, 200, 0.2)',
                            'rgba(190, 120, 170, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(90, 150, 200, 1)',
                            'rgba(190, 120, 170, 1)',
                        ],
                        borderWidth: 1
